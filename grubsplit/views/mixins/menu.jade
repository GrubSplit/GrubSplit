mixin optionGroup(group)
    div=group.name
        if group.children
            for child in group.children
                +option(child)

mixin priceGroup(group)
    div=group.name
        if group.children
            for child in group.children
                +option(child)

mixin option(opt)
    div=opt.name
        if opt.children
            for child in opt.children
                if (child.type === 'option group')
                    +optionGroup(child)
                if (child.type === 'price group')
                    +priceGroup(child)
