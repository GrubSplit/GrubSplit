- var groupType

mixin subgrubItems(type, items)
    +listGroup('list')
        for item in items  
            +listItem
                +listHeading #{item.name}
                    +listText Price: $#{item.price}
                    +listText Quantity: #{item.quantity}
                    ul.subgrubDisplayOptions
                        for key in item.option_qty
                            li= key
                        if item.instructions != ""
                            li Instructions: "#{item.instructions}"
                    
mixin listGroup(type)
    - groupType = type
    case groupType
        when 'list'
            ul.list-group
                block
        default
            .list-group
                block
 
mixin listItem(arg1, arg2)
    case groupType
        when 'list'
            li( class=["list-group-item", arg1] )
                block
        when 'links'
            a( href=arg1, class=["list-group-item", arg2] )
                block
        default
            .list-group-item( class=["list-group-item", arg1] )
                block
 
mixin listHeading
    h4.list-group-item-heading
        block
 
mixin listText
    p.list-group-item-text
        block

