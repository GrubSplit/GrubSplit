extends layout

block content
  .page-header
    h1 Welcome to GrubSplit!
    h3 Search for nearby restaurants
  form.form-horizontal(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='address') Address
      .col-sm-7
        input.form-control(type='address', name='address', id='address', placeholder='Near this location', autofocus=true)
    .form-group
      .col-sm-offset-3.col-sm-7
        button.col-sm-3.btn.btn-primary(type='submit')
          i.fa.fa-user
          | Search
  if restaurants
    for restaurant in restaurants
        div=restaurant        
